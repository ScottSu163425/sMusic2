<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.scott.su.smusic2.modules.play.MusicPlayViewModel"/>
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default_header_main"
                    android:transitionName="@string/transition_name_cover"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    app:navigationIcon="?attr/homeAsUpIndicator"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:title=""/>
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/backgroundContent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/padding_s">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingTop="@dimen/padding_s"
                                android:singleLine="true"
                                android:text="听妈妈的话"
                                android:textColor="@color/textPrimary"
                                android:textSize="@dimen/text_size_title"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_artist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingTop="@dimen/padding_xxs"
                                android:singleLine="true"
                                android:text="周杰伦"
                                android:textColor="@color/textPrimary"
                                android:textSize="@dimen/text_size_body"/>
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/view_more"
                            android:layout_width="@dimen/height_button_m"
                            android:layout_height="@dimen/height_button_m"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/padding_xs"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_more_vert_black"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_s"
                        android:layout_marginTop="@dimen/padding_s"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_repeat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="@dimen/padding_s"
                            android:src="@drawable/ic_repeat_black"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:id="@+id/view_skip_previous"
                            android:layout_width="@dimen/height_button_m"
                            android:layout_height="@dimen/height_button_m"
                            android:layout_marginRight="@dimen/padding_xs"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_skip_previous_black"/>
                        </FrameLayout>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab_play"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/padding_xs"
                            android:src="@drawable/ic_play_arrow_white"
                            app:backgroundTint="@color/colorPrimary"
                            app:fabSize="normal"/>

                        <FrameLayout
                            android:id="@+id/view_skip_next"
                            android:layout_width="@dimen/height_button_m"
                            android:layout_height="@dimen/height_button_m"
                            android:layout_marginLeft="@dimen/padding_xs"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_skip_next_black"/>
                        </FrameLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/iv_shuffle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="@dimen/padding_s"
                            android:src="@drawable/ic_shuffle_black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_s"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_alignTop="@+id/view_queue_music"
                            android:text="专辑:"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_size_body"/>

                        <TextView
                            android:id="@+id/tv_album"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/view_queue_music"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_xs"
                            android:singleLine="true"
                            android:text="依然范特西"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_size_body"/>

                        <FrameLayout
                            android:id="@+id/view_queue_music"
                            android:layout_width="@dimen/height_button_m"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/height_button_m"
                            android:clickable="true"
                            android:layout_marginRight="@dimen/padding_xs"
                            android:layout_marginBottom="@dimen/padding_xs"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_queue_music_black"/>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </FrameLayout>

</layout>
