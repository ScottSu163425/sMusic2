<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.scott.su.smusic2.modules.collection.list.MainTabCollectionViewModel"/>
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/padding_xs"
            android:paddingRight="@dimen/padding_xs"/>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginRight="@dimen/padding_s"
            app:cardBackgroundColor="@color/backgroundContent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/empty_collections"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</layout>
